<% include ./partials/header %>
  <div class="ui main text container segment">
    <div class="ui huge header">
      <%= blog.title %>
    </div>
    <div class="ui top attached">
      <div class="item">
        <img class="ui centered rounded image" src="<%= blog.image %>" alt="Main blog image">
      </div>
      <div class="content">
        <span><strong><%= blog.created.toDateString() %></strong></span>
      </div>
      <div class="description">
        <!-- equal sign to dash allows user to insert html into post -->
        <p><%- blog.body %></p>
      </div>
      <a class="ui green basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
      <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red basic button">Delete</button>
      </form>
    </div>
  </div>


  <% include ./partials/footer %>
